{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/shared/**/*",
    "src/preload/**/*",
  ],
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@main/*": ["src/main/*"],
      "@resources/*": ["resources/*"],
    },
  }
}
